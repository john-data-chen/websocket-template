{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jsdom", "@testing-library/jest-dom", "vitest/globals"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "vitest.setup.ts"
  ]
}
